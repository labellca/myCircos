<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
<script type="text/javascript">
var i = 1;
	$(document).ready(function() {
		$("#add").click(function () {
			$("<div class='added' id='track'><div class='row'><div class='col-md-10'><div class='panel panel-default'><div class='panel-heading'><div class='row'><div class='col-md-6'><input type='text' class='form-control input-sm' placeholder='Track name' id='name"+i+"' name='name"+i+"'></div></div></div><div class='panel-body'><div class='row'><div class='col-md-4'><label for='graph'>Graphical representation</label><br><select name='graph"+i+"' id='graph"+i+"'><option value='histogram'>Histograms</option><option value='scatter'>Scatter Plots</option><option value='heatmap'>Heat Maps</option><option value='tile'>Tiles</option></select></div><div class='col-md-3'><label for='orientation'>Orientation</label><br><select name='orientation"+i+"' id='orientation"+i+"'><option value='out'>Out</option><option value='in'>In</option></select></div><div class='col-md-5'><label for='data'>Data</label><input type='file' id='file"+i+"' name='file"+i+"'></div></div></div></div></div><div class='col-md-2'><button class='remove btn btn-default pull-right btn-sm' type='button'><span class='glyphicon glyphicon-trash'></span></button></div></div></div>").appendTo('.add_track');
			i++;
			console.debug(i);
	    		});
		$('.remove').live("click",function() {
			$(this).closest('#track').fadeOut("slow", function() {
				$(this).remove();;
			console.debug(i);
	      		});
	    	});
	});
</script>
{% endblock %}
